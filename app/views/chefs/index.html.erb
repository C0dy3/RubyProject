<div class="container mx-auto px-4">
  <div class="flex items-center justify-between flex-wrap mb-6">
    <h1 class="text-3xl font-bold">Chefs</h1>
    <%= link_to 'Add New chef', new_chef_path, class: "btn btn-primary" %>
  </div>

  <table class="table-auto border-collapse border-slate-400 w-full">
    <thead class="bg-slate-50 dark:bg-slate-700">
    <tr>
      <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Name</th>
      <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Actions</th>
    </tr>
    </thead>

    <tbody>
    <% @chefs.each do |chef| %>
      <tr id="<%= dom_id(chef) %>" class="<%= dom_class(chef) %>">
        <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= chef.name %></td>
        <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400">
          <%= link_to 'Show', chef, class: "text-neutral-700 underline" %>
          <%= link_to 'Edit', edit_chef_path(chef), class: "text-indigo-700 underline" %>
          <%= link_to 'Destroy', chef, method: :delete, class: "text-red-700 underline", data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
